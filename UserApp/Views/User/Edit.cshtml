
@model UserApp.Models.User

@{
    ViewBag.Title = "Update";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.UserID)
    <div class="form-group">
        @Html.LabelFor(model => model.UserName)
        @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", required = "required" })
        @Html.ValidationMessageFor(model => model.UserName)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.UserPass)<br>
        @*@Html.EditorFor(model => model.UserPass, new { @class = "form-control", type = "password", required = "required"})*@
        @Html.TextBoxFor(model => model.UserPass, new { @class = "form-control", required = "required" })
        @Html.ValidationMessageFor(model => model.UserPass)

    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.DOB)
        @Html.TextBoxFor(model => model.DOB, new { @class = "form-control", type = "date", required = "required" })
        @Html.ValidationMessageFor(model => model.DOB)
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.Gender)<br>
        @*@Html.TextBoxFor(model => model.Gender, new { @class = "form-control" })*@
        <div class="col-md-10 btn-group" data-toggle="buttons" style="padding-bottom:10px">
            @Html.RadioButtonFor(model => model.Gender, "Male", new { id = "IsMale" }) Male
            @Html.RadioButtonFor(model => model.Gender, "Female", new { id = "IsFemale" }) Female
        </div>
        @Html.ValidationMessageFor(model => model.Gender)
    </div>

  

    <div class="form-group">
        @Html.LabelFor(model => model.Phone)
        @Html.TextBoxFor(model => model.Phone, new { @class = "form-control", type = "text", pattern = "[0-9]{10}", title = "Enter 10 digits.", required = "required" })
        @Html.ValidationMessageFor(model => model.Phone)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Address)
        @Html.TextBoxFor(model => model.Address, new { @class = "form-control", required = "required" })
        @Html.ValidationMessageFor(model => model.Address)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Email)
        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", type = "email", required = "required" })
        @Html.ValidationMessageFor(model => model.Email)
    </div>

    <div class="form-group">
        @Html.Label("Skills")
        <br />
        @foreach (var skill in ViewBag.Skills)
        {
            var isSkillSelected = Model.Skills.Any(s => s.SkillID == skill.SkillID);
            <label>
                <input type="checkbox" name="SelectedSkills" value="@skill.SkillID" @(isSkillSelected ? "checked" : "") />
                @skill.SkillName
            </label>
            <br />
        }
    </div>


    <div class="form-group">
        <input type="submit" value="Update" class="btn btn-primary" />

    </div>
}

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

